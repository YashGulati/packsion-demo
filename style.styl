@import url('https://fonts.googleapis.com/css?family=Raleway:900')

body
  background: #fff
  padding: 0
  margin: 0
  color: white
  font-family: 'Raleway', sans-serif
section
  margin: 0
  h1
    margin: 0
header
  // background: url('https://packsion.com/packsion/img/home-bg.jpg')
  overflow: hidden
  height: 85vh
  position: relative
  .left-image
    background: url('images/men.jpg')
  .right-image
    background: url('images/women.jpg')
    // left: 50%
    // right: 0%
  .bg-image
    // z-index: -1
    width: 50%
    // z-index: -1
    // position: absolute
    top: 0px
    bottom: 0px
    background-position: top
    background-repeat: no-repeat
    background-size: cover
    height: 85vh
    transition: all 0.3s ease
    cursor: pointer
    &:hover
      -moz-transform: scale(1.02);
      -webkit-transform: scale(1.02);
      transform: scale(1.02);
    .light
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      background: rgba(0, 0, 0, 0.4)
      // display: none
    button
      background: none
      position: absolute;
      left: 50%
      top: 75%
      transform: translate(-50%, -50%)
      border-radius: 25px
      // padding: 2% 8%
      width: 200px
      height: 40px
      border: 1px solid white
      background: rgba(0, 0, 0, 0.4)
      font-size: 1.4em
      transition: all 1s ease
      color: #fff;
      min-width: 200px;

      border: 1px solid #fff;
      border-radius: 50px;
      display: inline-block;
      margin-top: 20px;
      padding: 10px 40px;
      font-family: 'Raleway', sans-serif;
      font-weight: 700;
      font-size: 13px;
      &:hover
        color #3c3d41
        background #fff
  .header-text
    position: absolute;
    top: 40%
    left: 50%
    transform: translate(-50%, -50%)
    color: #fff
    font-size: 1.8em
    text-align: center
    img
      margin-bottom: 5%
    span, div
      z-index: 55
      font-size: 1.8em
    span
      font-size: 5em
      margin: 0 25%
nav
  padding: 30px 5% 30px
  position: relative
  background-color: rgba(0, 0, 0, 0.9)
  height: 100px
  // width: 100%
  display: block
  .logo
    float: left
  ul
    list-style none
    float right
    text-transform uppercase
    li
      display: inline
      a
        font-size 13px
        font-weight bold
        padding 10px 15px
        text-align center
        font-family 'Raleway', sans-serif
        color #fff

.section2
  margin: 0
  margin-top: 24%
  padding 5% 20%
  div
    text-align: center
    button
      display: inline
      border 2px solid #ed7d31
      padding 10% 20%
      border-radius 15px
      background white
      color #111
      font-weight 600
      text-transform uppercase
      &:hover
        background #ed7d31
        color white
      &:focus
        outline: none
.packages
  height: 60vh
  margin: 0
  .package
    color: #000
    margin: 1% 0%
    font-size: 1.2em
    display: none

.products
  padding: 2% 8% 1% 8%
  h1
    font-weight: 900
    color: black
    text-align: center
    margin: 4% 0% 4%
  .product
    img
      width: 100%
